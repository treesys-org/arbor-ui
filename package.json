{
  "name": "arbor",
  "version": "1.0.0",
  "description": "Visual Knowledge Explorer. A free, open-source, and community-driven platform for decentralized learning.",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "author": "Treesys",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "org.treesys.arbor",
    "productName": "Arbor",
    "files": [
      "**/*",
      "!dist/",
      "!release/"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Education"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  }
}
